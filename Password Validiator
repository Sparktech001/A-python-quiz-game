# A password validiator  using string module, for loop, while loop and logic
import string

numbers = list(string.digits)
capital_letters =  list(string.ascii_uppercase)
small_letters = list(string.ascii_lowercase)
punctuations = list(string.punctuation)


print("*******************************")
print(" Enter a password to validiate ")
print("*******************************")

def Password_validiatorN(user_password):
    for number in user_password:
        if number in numbers:
            return True
        
    return False

def Password_validiatorC(user_password):
    for capital_letter in user_password:
        if capital_letter in capital_letters:
            return True
        
    return False

def Password_validiatorS(user_password):
    for small_letter in user_password:
        if small_letter in small_letters:
            return True
        
    return False

def Password_validiatorP(user_password):
    for puntuation in user_password:
        if puntuation in punctuations:
            return True
        
    return False


def Password_validiatorl(user_password):
    if len(user_password) < 8:
        return True
        
    return False


def Strong_password(user_password):
    strong = True
    if not Password_validiatorN(user_password):
        print ("Password doesn't contain Number")
        strong = False

    if not Password_validiatorP(user_password):
        print ("Password doesn't contain Punctuation")
        strong = False

    if  Password_validiatorl(user_password):
        print ("Password must be more than 8")
        strong = False

    if not Password_validiatorS(user_password):
        print ("Password doesn't contain Small letter")
        strong = False
    
    if not Password_validiatorC(user_password):
        print ("Password doesn't contain Capital letter")
        strong = False
    return strong

def main():
    
    is_running = True
    while is_running:
        user_password = input("Enter a Password to validiate: ")
        if Strong_password(user_password):
            print ("Great this is a strong password")
            break
        else:
            print("Password isn't strong enough")
            print("Try again")
    

if __name__ == "__main__":
    main()
